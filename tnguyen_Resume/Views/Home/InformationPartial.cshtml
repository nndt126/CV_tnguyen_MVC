@using tnguyen_Resume.Models;
@model Information

<div class="row">
    <div class="three columns">
        <img class="profile-pic" src="@Url.Content("~/Content/images/profile/" + Model.Image)" alt="" />
    </div>

    <div class="nine columns main-col">
        <h2>About Me</h2>
        <p>
            @Model.About
        </p>

        <div class="row">

            <div class="columns contact-details">

                <h2>Contact Details</h2>
                <p class="address">
                    <span>@Model.Name</span><br>
                    <span>
                        @Model.Address<br>
                        @Model.City
                    </span><br>
                    <span>@Model.Phone</span><br>
                    <span>@Model.Email</span>
                </p>

            </div>
            <div class="columns download">
                <p>
                    <a href="javascript:window.print()" class="button"><i class="fa fa-download"></i>Print Resume</a>
                </p>
            </div>
        </div> <!-- end row -->
    </div> <!-- end .main-col -->
</div>
